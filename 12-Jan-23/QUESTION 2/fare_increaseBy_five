    let fare = parseInt(prompt("enter a fare amount"));
    let time = prompt("Enter time in 24 hr format");
    let timeArray = time.split(':');
    let hours = timeArray[0];
    let minutes = timeArray[1];

    if((hours>=23 && hours<=24)|| (hours>=1)&& (hours <= 6)){
        fare += (fare*5)/100;
